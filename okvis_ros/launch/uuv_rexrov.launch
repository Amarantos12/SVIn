<!--     <remap from="/camera1" to="/bluerov2/bluerov2/cameraright/camera_image"/> -->

<!--     <remap from="/imu" to="//bluerov2/imu" /> -->

<!--   </node> -->

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find okvis_ros)/config/rviz_svin.rviz" />


</launch>